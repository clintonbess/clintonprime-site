# server-global config (source this on the server or pass via GH Actions)

# who runs the app processes / owns the repo directory
export REMOTE_USER="ubuntu"

# paths
export WEB_ROOT="/var/www/html/clintonprime"
export SITE_ROOT="/opt/clintonprime-site"
export REPO_DIR="$SITE_ROOT/repo"
export CURRENT_API="$SITE_ROOT/current-api"
export RELEASES_DIR="$SITE_ROOT/releases"        # reserved for future rollback flows

# domain & email for nginx/certbot
export DOMAIN="dev.clintonprime.com"
export EMAIL="clintonbess3@gmail.com"

# pm2 process name
export PM2_NAME="clintonprime-api-dev"

# repo to clone
export REPO_URL="https://github.com/clintonbess/clintonprime-site"

# build selector (use ONE of these in deploy.sh)
# export BRANCH="dev-deploy"     # preferred for manual runs
# export SHA="abcdef1234..."     # exact commit for Actions or pinning
