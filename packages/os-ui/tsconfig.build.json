{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "sourceMap": false,
    "disableSourceOfProjectReferenceRedirect": true,
    "baseUrl": ".",
    "paths": {
      "@clintonprime/types": ["../../libs/types/src/index.ts", "../../libs/types"],
      "@clintonprime/os-core": ["../os-core/src/index.ts", "../os-core"]
    }
  },
  "references": [
    {
      "path": "../../libs/types"
    },
    {
      "path": "../os-core"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}